{
    "buildCommand": "cd frontend && echo 'No build needed for static frontend'",
    "outputDirectory": "frontend",
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "rewrites": [
        {
            "source": "/src/pages/(.*)",
            "destination": "/src/pages/$1"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}